<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="10"
    android:orientation="vertical"
    tools:context="com.example.android.pnpcab.Ride">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:textSize="60dp"
        android:textStyle="bold"
        android:gravity="center"
        android:background="#000000"
        android:textColor="#ffff00"
        android:text="BOOK YOUR RIDE"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:inputType="textMultiLine"
        android:textColor="#000000"
        android:id="@+id/des1"
        android:gravity="center"
        android:hint="ENTER YOUR DESTINATION"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:inputType="textPersonName"
        android:textColor="#000000"
        android:id="@+id/req"
        android:gravity="center"
        android:hint="ENTER YOUR TIME"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:textColor="#000000"
        android:id="@+id/source1"
        android:gravity="center" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:textColor="#000000"
        android:gravity="center"
        android:id="@+id/time1"
        android:hint="BOOKING DATE/TIME"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:layout_weight="1"
        android:textColor="#000000"
        android:id="@+id/car1"
        android:hint="CAR TYPE"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="BOOK RIDE"
        android:onClick="ridela"
        />


</LinearLayout>
